<resources>
    <!-- Toolbar -->
    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="titleTextColor">@color/textColorPrimaryInverse</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- AppBar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Necessary to make toolbar's overflow and back arrow icons be colored white -->
        <item name="colorControlNormal">@color/textColorPrimaryInverse</item>
    </style>

    <!-- PopupMenu -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat">
    </style>

    <!-- RecyclerView item styles -->
    <style name="ItemBase">
        <item name="android:background">@drawable/item_bg_color</item>
        <!--<item name="android:stateListAnimator">@animator/item_state_list</item>-->
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- RealmRecyclerView styles -->
    <style name="RealmRVBase">
        <item name="rvPaddingStart">0dp</item>
        <item name="rvPaddingEnd">0dp</item>
        <item name="rvPaddingBottom">@dimen/recycler_view_padding</item>
    </style>

    <style name="RealmRVFastScroll" parent="RealmRVBase">
        <item name="fastScroll">true</item>
        <item name="autoHideFastScrollHandle">true</item>
        <item name="handleAutoHideDelay">1000</item>
    </style>

    <style name="RealmRVFastScrollWithBubble" parent="RealmRVFastScroll">
        <item name="useFastScrollBubble">true</item>
    </style>
</resources>
