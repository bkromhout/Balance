<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bkromhout.balances">

    <application
            android:name=".Balances"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activities.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.NewBalanceActivity"
                android:label="@string/action_new_balance"
                android:parentActivityName=".activities.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".activities.MainActivity"/>
        </activity>
        <activity
                android:name=".activities.BalanceDetailsActivity"
                android:label="@string/balance_details"
                android:parentActivityName=".activities.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".activities.MainActivity"/>
        </activity>
        <activity
                android:name=".activities.NewTransactionActivity"
                android:label="@string/action_new_transaction"
                android:parentActivityName=".activities.BalanceDetailsActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".activities.BalanceDetailsActivity"/>
        </activity>
        <activity
                android:name=".activities.SettingsActivity"
                android:label="@string/title_settings"/>
        <activity
                android:name=".activities.CategoriesActivity"
                android:label="@string/title_categories"
                android:parentActivityName=".activities.SettingsActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".activities.SettingsActivity"/>
        </activity>
        <activity
                android:name=".activities.AboutActivity"
                android:label="@string/title_about_balances"/>
        <activity
                android:name=".widget.ConfigureWidgetActivity"
                android:label="@string/title_configure_widget_activity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <receiver
                android:name=".widget.BalanceWidgetProvider"
                android:label="@string/widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/balance_widget_info"/>
        </receiver>
    </application>
</manifest>